<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.Regular">
        <item name="android:fontFamily">@font/noto_sans</item>
    </style>

    <style name="TextStyle.Medium">
        <item name="fontFamily">@font/noto_sans_medium</item>
    </style>

    <style name="TextStyle.SemiBold">
        <item name="fontFamily">@font/noto_sans_semi_bold</item>
    </style>

    <style name="TextStyle.Bold">
        <item name="android:fontFamily">@font/noto_sans_bold</item>
    </style>

    <style name="TextStyle.Italic">
        <item name="android:fontFamily">@font/noto_sans_italic</item>
    </style>
</resources>